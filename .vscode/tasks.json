{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Test Cases",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "problemMatcher": {
                "base": "$msCompile",
                "fileLocation": [
                    "autoDetect",
                    "${workspaceRoot}/test"
                ]
            },
            "group": "build",
            "presentation": {
                "clear": true
            }
        }
    ]
}